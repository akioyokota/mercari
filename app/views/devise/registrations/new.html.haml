%body.sign
  .header-box
    .header-box__sign-up
      %h1.header-box__sign-up__logo
        =link_to image_tag("logo.png",width:"185",height:"49"), root_path  
      %nav.header-box__sign-up__box
        %ol
          %li.header-box__sign-up__box__text--active{ id: "first" }
            会員情報
            .header-box__sign-up__box__round--green
          %li.header-box__sign-up__box__text
            お届け先住所入力
            .header-box__sign-up__box__round 
          %li.header-box__sign-up__box__text{ id: "end" }
            完了
            .header-box__sign-up__box__round__end

  .main
    .main__box
      .main__box__container__one
        %h2.main__box__h2 会員情報入力

      .main__box__container__two
        .main__box__container__two__in

          = form_for(@user, url: user_registration_path) do |f|
            .field
              = f.label :"ニックネーム"
              %span.caution 必須
              %br/
              = f.text_field :nickname, class: 'form', autofocus: true, autocomplete: "nickname" , placeholder: "例)ジョー"
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:nickname).each do |message|
                      %li{style: "color:red"}
                        = message
            .field
              = f.label :"メールアドレス"
              %span.caution 必須
              %br/
              = f.email_field :email, class: 'form', autofocus: true, autocomplete: "email" , placeholder: "PC・携帯どちらでも可"
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:email).each_with_index do |message, i|
                      %li{style: "color:red"}
                        - if i == 0
                          = message
            .field
              = f.label :"パスワード"
              %span.caution 必須
              %br/
              = f.password_field :password, class: 'form', autocomplete: "new-password" , placeholder: "7文字以上の半角英数字"
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:password).each do |message|
                      %li{style: "color:red"}
                        = message
            .field
              = f.label :"パスワード(確認用)"
              %span.caution 必須
              %br/
              = f.password_field :password_confirmation, class: 'form', autocomplete: "new-password" , placeholder: ""
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:password_confirmation).each do |message|
                      %li{style: "color:red"}
                        = message
            .caution-box
              %h3.caution-box__h3 本人確認
              %p.caution-box__message 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
            %br
            %label お名前(全角)
            %span.caution 必須
            .name-form__one
              .field
                = f.text_field :family_name, class: 'name-form-detail',  autofocus: true, autocomplete: "family_name" , placeholder: "例)山田"
              .field
                = f.text_field :first_name, class: 'name-form-detail', autofocus: true, autocomplete: "first_name" , placeholder: "例)太郎"
              %br/
            .name-box
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:family_name,).each do |message|
                      %li{style: "color:red"}
                        = message
            .name-box
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:first_name,).each do |message|
                      %li{style: "color:red"}
                        = message
            %label お名前カナ(全角)
            %span.caution 必須
            .name-form__two
              .field
                = f.text_field :family_name_kana, class: 'name-form-detail', autofocus: true, autocomplete: "family_name_kana" , placeholder: "例)ヤマダ"
              .field
                = f.text_field :first_name_kana, class: 'name-form-detail', autofocus: true, autocomplete: "first_name_kana" , placeholder: "例)タロウ"
              %br/
            .name-box
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:family_name_kana,).each do |message|
                      %li{style: "color:red"}
                        = message
            .name-box
              - if @user.errors.any?
                .error_explanation
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:first_name_kana,).each do |message|
                      %li{style: "color:red"}
                        = message
            .field
              = f.label :"生年月日"
              %span.caution 必須
              %br/
              .chgange
                = raw sprintf(f.date_select(:birthday, start_year: 1920, end_year: Time.now.year, class: 'required',  prompt:"--", :use_month_numbers => true, :date_separator => '%s'),'年','月')+ '日' 
              - if @user.errors.any?
                .error_explanation
                  %br
                  %h2
                    - I18n.t("errors.messages.not_saved",                 |
                      count: resource.errors.count,                       |
                      resource: resource.class.model_name.human.downcase) |
                  %ul.error-messages
                    - @user.errors.full_messages_for(:birthday).each do |message|
                      %li{style: "color:red"}
                        = message
            .field
              = f.label :"電話番号"
              %span.caution 必須
              %br/
              = f.text_field :phone, class: 'form', autofocus: true, autocomplete: "phone", placeholder: "例)08011110001"
            - if @user.errors.any?
              .error_explanation
                %h2
                  - I18n.t("errors.messages.not_saved",                 |
                    count: resource.errors.count,                       |
                    resource: resource.class.model_name.human.downcase) |
                %ul
                  - @user.errors.full_messages_for(:phone).each do |message|
                    %li{style: "color:red"}
                      = message

            .field
              = f.label :"プロフィール(省略可)"
              %br/
              = f.text_field :profile, class: 'form', autofocus: true, autocomplete: " profile", placeholder: "省略可"
            .file-box
              .field
                = f.label :"アイコン(省略可)"
                = f.file_field:icon
                %br/
            .label-box
              %label.gray ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
            .actions
              = f.submit "次へ進む", class: 'sign-btn'
          %br/
          .message-box
            .message-box__one
              = link_to '本人情報の登録について>', "#", class: 'message-box__in'
            .message-box__two
              This site is protected by reCAPTCHA and the Google 
              %span.blue Privacy Policy
              and 
              %span.blue Terms of Service 
              apply.

.footer-box
  .footer-box__one
    %ul.footer-box__one__list
      %li.footer_box__one__list__detail
        = link_to 'プライバシーポリシー', "#", class: 'policy'
      %li.footer_box__one__list__detail
        = link_to 'メルカリ利用規約' , "#", class: 'policy'
      %li.footer_box__one__list__detail
        = link_to '特定商取引に関する表記', "#", class: 'policy'
  .footer-box__two
  .footer-box__three
    © Mercari, Inc.
