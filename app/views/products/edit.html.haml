= form_for @product do |f|
  = f.text_field :name, placeholder: 'name'
  #image-box
    #previews
      - if @product.persisted?
        - @product.images.each_with_index do |image, i|
          = image_tag image.image_url.url, data: { index: i }, width: '100', height: '100'
    = f.fields_for :images do |i|
      .js-file_group{ data: { index: i.index } }
        = i.file_field :image_url, class: 'js-file'
        %br/
        %span{ class: 'js-remove' }削除
      - if @product.persisted?
        = i.check_box :_destroy, data: { index: i.index }, class: 'hidden-destroy'
    - if @product.persisted?
      .js-file_group{ data: { index: @product.images.count } }
        = file_field_tag :image_url, name: "product[images_attributes][#{@product.images.count}][image_url]", class: 'js-file'
        .js-remove 
          削除
  = f.submit 'SEND'

